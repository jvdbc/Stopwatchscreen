<Window x:Name="LookAwayWin" x:Class="_20Min.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20Min"
        mc:Ignorable="d"
        Title="LookAway" 
        Loaded="OnLoaded" ResizeMode="NoResize" SizeToContent="WidthAndHeight" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen"
        MouseMove="OnMouseMove" MouseUp="OnMouseUp" MouseDown="OnMouseDown" ShowInTaskbar="False"
       >
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock"  TextWrapping="Wrap" Text="{Binding Value}" FontSize="36" />
    </Grid>
</Window>
